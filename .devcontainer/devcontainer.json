{
  "name": "Ruby on Rails Dynamic Links",
  "image": "mcr.microsoft.com/devcontainers/ruby:3.4-bookworm",
  "workspaceFolder": "/workspaces/dynamic_links",
  "forwardPorts": [
    3000,
    6379,
    5432
  ],
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true,
      "installOhMyZshConfig": true,
      "upgradePackages": true
    }
  },
  "runArgs": [
    "--name",
    "dynamic_links_devcontainer"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "ruby.useBundler": true,
        "ruby.useLanguageServer": true,
        "ruby.lint": {
          "rubocop": true
        },
        "editor.tabSize": 2,
        "files.associations": {
          "*.erb": "erb",
          "Gemfile": "ruby",
          "Rakefile": "ruby",
          "*.rake": "ruby"
        },
        "[ruby]": {
          "editor.tabSize": 2,
          "editor.insertSpaces": true
        },
        "ruby.format": "rubocop"
      },
      "extensions": [
        "rebornix.ruby",
        "castwide.solargraph",
        "kaiwood.endwise",
        "aliariff.vscode-erb-beautify",
        "misogi.ruby-rubocop",
        "wingrunr21.vscode-ruby",
        "editorconfig.editorconfig",
        "davidanson.vscode-markdownlint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker",
        "donjayamanne.githistory",
        "aki77.rails-db-schema"
      ]
    }
  },
  "onCreateCommand": "bash -c 'gem install bundler && bundle install && npm install -g yarn && yarn install'",
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y postgresql-client redis-tools && npm install -g @anthropic-ai/claude-code",
  "postStartCommand": "bash -c 'source .env && docker-compose --profile postgres --profile redis up -d && echo \"PostgreSQL (localhost:5432) and Redis (localhost:6379) services started via Docker Compose\"'",
  "portsAttributes": {
    "3000": {
      "label": "Rails Server",
      "onAutoForward": "notify"
    }
  },
  "remoteUser": "vscode"
}
