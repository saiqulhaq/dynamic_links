{
  "name": "rails_dynamic_links",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "3.2.2",
    "@hotwired/turbo-rails": "8.0.16",
    "esbuild": "0.25.5",
    "tailwindcss": "4.1.11",
    "@tailwindcss/cli": "4.1.11",
    "@tailwindcss/postcss": "4.1.11",
    "concurrently": "^9.1.0"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.js --bundle --sourcemap --outdir=app/assets/builds --public-path=/assets",
    "build:css": "tailwindcss -i app/assets/stylesheets/application.tailwind.css -o app/assets/builds/application.css",
    "build:all": "yarn build && yarn build:css",
    "dev": "yarn build --watch",
    "dev:css": "yarn build:css --watch",
    "dev:all": "concurrently \"yarn dev\" \"yarn dev:css\""
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
